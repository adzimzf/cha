{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Cha",
  "version": "0.1.0",
  "identifier": "com.cha.app",
  "build": {
    "frontendDist": "../release/app/dist/renderer/",
    "devUrl": "http://localhost:1212",
    "beforeDevCommand": "npm run start:renderer"
  },
  "app": {
    "windows": [
      {
        "title": "Cha",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon-1024.png",
      "icons/icon.svg",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
